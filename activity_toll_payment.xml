<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/Activity_PadddingTop"
    android:background="@color/activityBgcolor"
    tools:context=".TollPayment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/Ten_dp">
            <android.support.v7.widget.CardView
                android:id="@+id/logincardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/Fifteen_dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/Seven_dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvHead"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Payment Collection"
                            android:gravity="center_horizontal|center_vertical"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textStyle="bold"
                            android:layout_weight="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Date"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textColor="@color/themeBG"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textColor="@color/themeBG"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linpay"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvTimeH"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Time"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textColor="@color/themeBG"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textColor="@color/themeBG"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Route"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvRouteName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/Eighteen_dp"
                            android:textColor="@color/themeBG"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Toll"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvTollName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:padding="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Total Amount"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="2"/>
                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="1"/>
                    </LinearLayout>
                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginBottom="@dimen/Five_dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvSecreteCode"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Secret Code"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="2"/>
                        <EditText
                            android:id="@+id/edSecreteCode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/themeBG"
                            android:textSize="@dimen/Eighteen_dp"
                            android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/FortyFour_dp"
                        android:layout_marginTop="@dimen/Five_dp"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/btnPayment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/roundedbutton"
                            android:padding="@dimen/Ten_dp"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="@dimen/Sixteen_dp"
                            android:text="Make Payment"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>