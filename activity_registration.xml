<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBgcolor"
    tools:context=".Registration">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/Ten_dp">
            <android.support.v7.widget.CardView
                android:id="@+id/logincardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:cardCornerRadius="@dimen/Fifteen_dp"
                app:cardElevation="0dp"
                app:contentPadding="@dimen/Seven_dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/Five_dp"
                        android:layout_marginBottom="@dimen/Twenty_dp"
                        android:text="Registration"
                        android:textAlignment="center"
                        android:textColor="@color/themeBG"
                        android:textStyle="bold"
                        android:textSize="@dimen/Twenty_dp" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edregName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="_abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@.-()*+/% "
                        android:hint="Name"
                        android:textColorHighlight="@color/themeBG"
                        android:textColorHint="@color/themeBG"
                        android:inputType="text"
                        android:maxLength="100"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Vehicle No"
                        android:textColor="@color/themeBG"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:paddingTop="@dimen/Five_dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edMH"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/Ten_dp"
                            android:layout_marginRight="@dimen/Ten_dp"
                            android:hint=""
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:textColorHint="@color/themeBG"
                            android:inputType="text"
                            android:maxLength="2"
                            android:paddingRight="@dimen/Ten_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelAlwaysShown="false"
                            app:met_floatingLabelAnimating="true"
                            app:met_textColorHint="@color/themeBG" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edTen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/Ten_dp"
                            android:layout_marginRight="@dimen/Ten_dp"
                            android:hint=""
                            android:digits="0123456789"
                            android:textColorHint="@color/themeBG"
                            android:inputType="number"
                            android:maxLength="2"
                            android:paddingRight="@dimen/Ten_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelAlwaysShown="false"
                            app:met_floatingLabelAnimating="true"
                            app:met_textColorHint="@color/themeBG" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edBB"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/Ten_dp"
                            android:layout_marginRight="@dimen/Ten_dp"
                            android:hint=""
                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:textColorHint="@color/themeBG"
                            android:inputType="text"
                            android:maxLength="2"
                            android:paddingRight="@dimen/Ten_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelAlwaysShown="false"
                            app:met_floatingLabelAnimating="true"
                            app:met_textColorHint="@color/themeBG" />
                        <com.rengwuxian.materialedittext.MaterialEditText
                            android:id="@+id/edNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.76"
                            android:layout_marginLeft="@dimen/Ten_dp"
                            android:layout_marginRight="@dimen/Ten_dp"
                            android:hint=""
                            android:digits="0123456789"
                            android:textColorHint="@color/themeBG"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingRight="@dimen/Ten_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/normal_text"
                            app:met_floatingLabel="highlight"
                            app:met_floatingLabelAlwaysShown="false"
                            app:met_floatingLabelAnimating="true"
                            app:met_textColorHint="@color/themeBG" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/Forty_dp"
                        android:layout_marginLeft="@dimen/Five_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:orientation="vertical">
                        <Spinner
                            android:id="@+id/spVehicleType"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:spinnerMode="dialog"
                            android:layout_weight="1"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/themeBG"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edRFIDcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="_abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@.-()*+/% "
                        android:hint="RFID Code"
                        android:textColorHint="@color/themeBG"
                        android:inputType="text"
                        android:maxLength="20"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="1234567890"
                        android:hint="Mobile No"
                        android:textColorHint="@color/themeBG"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="_abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@.-()*+/% "
                        android:hint="Email Id"
                        android:textColorHint="@color/themeBG"
                        android:inputType="textEmailAddress"
                        android:maxLength="100"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="_abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@.-()*+/% "
                        android:hint="Password"
                        android:textColorHint="@color/themeBG"
                        android:inputType="textPassword"
                        android:maxLength="8"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edPasswordR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/Ten_dp"
                        android:layout_marginRight="@dimen/Ten_dp"
                        android:layout_marginTop="@dimen/Two_dp"
                        android:digits="_abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890@.-()*+/% "
                        android:hint="Retype Password"
                        android:textColorHint="@color/themeBG"
                        android:inputType="textPassword"
                        android:maxLength="8"
                        android:paddingRight="@dimen/Ten_dp"
                        android:singleLine="true"
                        android:textSize="@dimen/normal_text"
                        app:met_floatingLabel="highlight"
                        app:met_floatingLabelAlwaysShown="false"
                        app:met_floatingLabelAnimating="true"
                        app:met_textColorHint="@color/themeBG" />
                    <Button
                        android:id="@+id/btnRegister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/TwentyFive_dp"
                        android:background="@drawable/roundedbutton"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/Sixteen_dp"
                        android:text="Register"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>